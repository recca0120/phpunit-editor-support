{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es5",
        "outDir": "dist",
        "lib": [
            "es2016"
        ],
        "sourceMap": true,
        "declaration": true,
        "rootDir": "src",
        "strict": true,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,
        "allowUnreachableCode": false,
        "noUnusedLocals": true,
        "noUnusedParameters": false
    },
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "scripts",
        "node_modules",
        "tests"
    ]
}